<div class="container mt-2">
  <div class="row">
    <div class="search-form-control form-group">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      <% end %>
    </div>
    <div class="col-12">
      <div class="job-wrapper">
        <%= will_paginate @jobs %>
        <% @jobs.each do |job| %>
          <div class="job-card d-flex pt-3">
            <%= image_tag "https://source.unsplash.com/random" %>
            <div class="job-details">
              <div class="co-12 col-sm-6 col-md-4 mb-3">
                <%= link_to job_path(job), class:"text-decoration-none" do %>
                  <div class="card-category" >
                    <%= job.title %>
                  </div>
                <% end %>
              </div>
              <p><%= job.description %></p>
              <div class="d-flex">
                <p><%= job.budget %></p>
              </div>
              <p><%= job.employer.username %></p>
              <p><%= job.employer.name %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <%= link_to "Create a job list", new_job_path, class: "btn btn-flat" %>
  </div>
</div>
