<div class="black-header">
  <div class="container">
    <h2><%= @job.title %></h2>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-9">
      <div class="white-box">
        <div class="d-flex justify-content-between align-items-center border-bottom py-3">
          <h3 class="font-weight-bold">Project Details</h3>
          <h5 class="font-weight-bold">$<%= @job.budget %>
            USD</h5>
        </div>

        <p><%= @job.description %></p>
        <p><%= @job.budget %></p>
        <p><%= @job.employer.username %></p>
        <p><%= @job.employer.name %></p>
        <p><%= @job.start_date %></p>
        <p><%= @job.end_date %></p>
        <p><%= @job.created_at %></p>
      </div>
    </div>
    <div class="col-3">
      <div class="white-box">
        <h5 class="border-bottom py-2">About the Client</h5>

        <div class="row">
          <div class="col-1">
            <i class="fa-solid fa-location-dot"></i>
          </div>
          <div class="col-10">
            <p class="mb-0"><%= @job.employer.location.split(", ")[1] %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-1">
            <img src="https://www.countryflagicons.com/FLAT/16/<%= @country_code %>.png"></div>
            <div class="col-10">
              <p class="mb-0"><%= @country %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-1">
              <i class="fa-solid fa-user"></i>
            </div>
            <div class="col-10">
              <p class="mb-1">
                <i class="fa-solid fa-star text-danger"></i>
                <i class="fa-solid fa-star text-danger"></i>
                <i class="fa-solid fa-star text-danger"></i>
                <i class="fa-solid fa-star text-danger"></i>
                <i class="fa-solid fa-star text-danger"></i>
                5.0
                <i class="fa-solid fa-message ms-3"></i>
                <%= rand(1..20) %>
              </p>
            </div>

            <div class="row">
              <div class="col-1">
                <i class="fa-solid fa-clock"></i>
              </div>
              <div class="col-10">
                <p class="mb-1"><%= @job.employer.created_at.strftime("Joined %B %d, %Y") %>
                </p>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
