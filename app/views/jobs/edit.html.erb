<div class="container">
  <div class="white-card">
    <h2 class="mb-3">Complete job</h2>
    <%= simple_form_for(@job) do |f| %>
      <div class="form-inputs">
        <%= f.input :complete, as: :boolean, required:true, label: "Job complete?" %>
        <%= f.input :photo, as: :file, required: true, label: 'Upload a photo' %>
      </div>
      <div class="form-actions">
        <div class="row" style="margin-right: 0px; margin-left: 0px;">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
