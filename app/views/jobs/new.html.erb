<h2>Post a new job</h2>

<%= simple_form_for @job do |f| %>
  <%= f.input :title, label: "What's the title of your job?", error: 'A job title is mandatory, please specify one' %>
  <%= f.input :description, label: 'Tell us more about your job.', error: 'A job description is mandatory, please specify one' %>
  <%= f.input :budget, label: 'How much are you willing to pay?' %>
  <%= f.button :submit %>
<% end %>
