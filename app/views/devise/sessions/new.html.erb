<div class="container">
  <div class="white-card mb-5">
    <%= link_to root_path do %>
      <img _ngcontent-webapp-c130="" alt="Freelancer logo" class="LogoImg mb-3" src="https://www.f-cdn.com/assets/main/en/assets/freelancer-logo-old.svg" data-size="mid">
      <% end %>
      <h3>
        Welcome Back
      </h3>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <div class="row" style="margin-right: 0px; margin-left: 0px;">
            <%= f.button :submit, "Log In", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
